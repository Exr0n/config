# keyboard test
#ctrl - j : ok

# TODO: make these work with tmux and vim splits, all using ctrl-hjkl
# focus window
ctrl + lcmd - h              : yabai -m window   --focus west || yabai -m display --focus 1
ctrl + lcmd - j              : yabai -m window   --focus south|| yabai -m display --focus 3
ctrl + lcmd - k              : yabai -m window   --focus north|| yabai -m display --focus 1
ctrl + lcmd - l              : yabai -m window   --focus east || yabai -m display --focus 2
#ctrl - h                    : yabai -m window   --focus west || yabai -m display --focus 1
#ctrl - j                    : yabai -m window   --focus south|| yabai -m display --focus 3
#ctrl - k                    : yabai -m window   --focus north|| yabai -m display --focus 1
#ctrl - l                    : yabai -m window   --focus east || yabai -m display --focus 2

# focus space
#   This looks crazy (and it probably is) but its a hierarchy ok?
#       spaces 6 and 9 are like registers, where 6 = terminal and 9 = calendar/control conter
#       spaces 7 and 8 are like the cpu cache, for whatever is being worked on now (7 slightly faster than 8)
#       spaces 1-5 are memory, resources or production areas for the current task
#       spaces 11-16 are storage, for things i might come back to in the future
ctrl + lcmd - 1             : yabai -m space    --focus 1
ctrl + lcmd - 2             : yabai -m space    --focus 2
ctrl + lcmd - 3             : yabai -m space    --focus 3
ctrl + lcmd - 4             : yabai -m space    --focus 4
ctrl + lcmd - 5             : yabai -m space    --focus 5
ctrl + lcmd - 0x0C          : yabai -m space    --focus 6
ctrl + lcmd - 0x0E          : yabai -m space    --focus 7
ctrl + lcmd - p             : yabai -m space    --focus 8
ctrl + lcmd - u             : yabai -m space    --focus 9
ctrl + lcmd - 0             : yabai -m space    --focus 10
ctrl + lalt - 1             : yabai -m space    --focus 11
ctrl + lalt - 2             : yabai -m space    --focus 12
ctrl + lalt - 3             : yabai -m space    --focus 13
ctrl + lalt - 4             : yabai -m space    --focus 14
ctrl + lalt - 5             : yabai -m space    --focus 15
ctrl + lalt - 6             : yabai -m space    --focus 16

# swap window
ctrl + lcmd + rcmd - h      : yabai -m window   --warp west  || echo TODO #yabai -m window 
ctrl + lcmd + rcmd - j      : yabai -m window   --warp south || echo failed #yabai -m window 
ctrl + lcmd + rcmd - k      : yabai -m window   --warp north || echo failed #yabai -m window 
ctrl + lcmd + rcmd - l      : yabai -m window   --warp east  || echo failed #yabai -m window 
ctrl + rcmd - h             : yabai -m window   --warp west  || echo failed #yabai -m window 
ctrl + rcmd - j             : yabai -m window   --warp south || echo failed #yabai -m window 
ctrl + rcmd - k             : yabai -m window   --warp north || echo failed #yabai -m window 
ctrl + rcmd - l             : yabai -m window   --warp east  || echo failed #yabai -m window 

# move window to space
ctrl + lcmd + rcmd - 1      : yabai -m window   --space 1  | yabai -m space --focus 1
ctrl + lcmd + rcmd - 2      : yabai -m window   --space 2  | yabai -m space --focus 2
ctrl + lcmd + rcmd - 3      : yabai -m window   --space 3  | yabai -m space --focus 3
ctrl + lcmd + rcmd - 4      : yabai -m window   --space 4  | yabai -m space --focus 4
ctrl + lcmd + rcmd - 5      : yabai -m window   --space 5  | yabai -m space --focus 5
ctrl + lcmd + rcmd - 0x0C   : yabai -m window   --space 6  | yabai -m space --focus 6
ctrl + lcmd + rcmd - 0x0E   : yabai -m window   --space 7  | yabai -m space --focus 7
ctrl + lcmd + rcmd - p      : yabai -m window   --space 8  | yabai -m space --focus 8
ctrl + lcmd + rcmd - u      : yabai -m window   --space 9  | yabai -m space --focus 9
ctrl + lcmd + rcmd - 0      : yabai -m window   --space 10 | yabai -m space --focus 10
ctrl + lalt + rcmd - 1      : yabai -m window   --space 11 | yabai -m space --focus 11
ctrl + lalt + rcmd - 2      : yabai -m window   --space 12 | yabai -m space --focus 12
ctrl + lalt + rcmd - 3      : yabai -m window   --space 13 | yabai -m space --focus 13
ctrl + lalt + rcmd - 4      : yabai -m window   --space 14 | yabai -m space --focus 14
ctrl + lalt + rcmd - 5      : yabai -m window   --space 15 | yabai -m space --focus 15
ctrl + lalt + rcmd - 6      : yabai -m window   --space 16 | yabai -m space --focus 16

# toggle float
ctrl + lcmd - 0x0D          : yabai -m window --toggle float

# open specific applications
ctrl + lcmd - d             : open -a Discord
ctrl + lcmd - m             : open -a Messages
ctrl + lcmd - t             : open -a TogglDesktop
ctrl + lcmd - s             : open -a Spark
ctrl + lcmd - n             : open -a Obsidian

# vivaldi doesn't have control n/p for quick commands
ctrl - n [
    "vivaldi" : release_control_key && osascript -e 'tell application "System Events" to key code 125'
]
ctrl - p [
    "vivaldi" : release_control_key && osascript -e 'tell application "System Events" to key code 126'
]

